<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherAppp.MainPage" BackgroundImageSource="Weather.jpeg">
    <StackLayout>
        
        
        <Label Text="Temp" TextColor="White"/>
        <Frame Padding="16">
        <Label Text="{Binding main.temp}"/>
        </Frame>
        <Label Text="Pressure" TextColor="White"/>
        <Frame Padding="16">
        <Label Text="{Binding main.pressure}"/>
         </Frame>
        <Label Text="Humidity" TextColor="White"/>
        <Frame Padding="16">
            <Label Text="{Binding main.humidity}"/>
         </Frame>
        <Label Text="Clouds" TextColor="White"/>
        <Frame Padding="16">
            <Label Text="{Binding clouds.all}"/>
         </Frame>
        <Label Text="Speed" TextColor="White"/>
        <Frame Padding="16">
            <Label Text="{Binding wind.speed}"/>
        </Frame>
    </StackLayout>
</ContentPage>